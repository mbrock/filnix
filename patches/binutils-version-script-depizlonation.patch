 /* Version handling.  This is only useful for ELF.  */
 
+/* Strip pizlonated_ prefix for Fil-C symbol matching.
+   Returns the original pointer if no prefix, or pointer past the prefix.
+   Can be disabled with FILC_PRESERVE_PREFIX environment variable. */
+
+static const char *
+depizlonate (const char *sym)
+{
+  if (getenv ("FILC_PRESERVE_PREFIX"))
+    return sym;
+
+  if (strncmp (sym, "pizlonated_", 11) == 0)
+    {
+      fprintf (stderr, "depizlonated: %s\n", sym);
+      return sym + 11;
+    }
+
+  return sym;
+}
+
 /* If PREV is NULL, return first version pattern matching particular symbol.
