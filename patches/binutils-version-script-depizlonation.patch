   struct bfd_elf_version_expr *expr = NULL;
   enum demangling_styles curr_style;
 
+  /* Strip pizlonated_ prefix if present for version script matching */
+  sym = depizlonate (sym);
+  cxx_sym = sym;
+  java_sym = sym;
+
